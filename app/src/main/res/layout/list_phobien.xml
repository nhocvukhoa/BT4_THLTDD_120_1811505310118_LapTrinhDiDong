<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="280dp"
        android:id="@+id/gridviewdata_118"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/duongvien1">
        <androidx.cardview.widget.CardView
            android:id="@+id/khunghinh_118"
            android:layout_width="180dp"
            android:layout_height="165dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">
            <ImageView
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:id="@+id/sanpham_118"
                tools:ignore="ContentDescription"
                android:scaleType="centerCrop"
                android:background="@drawable/duongvien1"
                android:src="@drawable/phobien1">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tensanpham_118"
            android:gravity="center"
            android:text="Cà phê lúa mạch đá"
            android:layout_below="@+id/khunghinh_118"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#4F4F4F"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/phancachphobien_118"
            android:orientation="horizontal"
            android:layout_below="@+id/tensanpham_118"
            android:layout_marginTop="30dp"
            android:background="#F1F1F1"></LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gia_118"
            android:layout_below="@+id/phancachphobien_118"
            android:text="69.000 đ"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textSize="20dp">
        </TextView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/them_118"
            android:layout_toRightOf="@+id/gia_118"
            android:layout_below="@+id/phancachphobien_118"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/ic_baseline_add_circle_outline_24"></ImageView>
    </RelativeLayout>

</RelativeLayout>