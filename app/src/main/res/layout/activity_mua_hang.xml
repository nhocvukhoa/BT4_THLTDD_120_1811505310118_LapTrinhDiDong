<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MuaHang">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        >
        <ImageView
            android:id="@+id/dathang_sanpham_118"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/phobien1"
            android:background="@drawable/duongvien1"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dathang_tensanpham_118"
            android:text="Cà phê lúa mạch"
            android:textSize="20dp"
            android:textColor="#484848"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/dathang_sanpham_118"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dathang_gia_118"
            android:layout_below="@+id/dathang_tensanpham_118"
            android:layout_toRightOf="@id/dathang_sanpham_118"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="69.000 đ"
            android:textSize="22dp"
            android:textColor="#484848"
            android:textStyle="bold"></TextView>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/dathang_imgyeuthich_118"
            android:src="@drawable/ic_yeuthich"
            android:layout_toRightOf="@id/dathang_sanpham_118"
            android:layout_below="@id/dathang_gia_118"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yêu thích"
            android:layout_toRightOf="@id/dathang_imgyeuthich_118"
            android:layout_below="@id/dathang_gia_118"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="#484848"></TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/dathang_gioithieumon_118"
            android:layout_below="@id/dathang_sanpham_118"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="#F7F7F7"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giới thiệu món"
                android:textColor="#484848"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textSize="24dp"></TextView>
        </LinearLayout>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/dathang_mieuta_118"
            android:layout_below="@id/dathang_gioithieumon_118"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:text="Đắm chìm vào hương vị cà phê mới mẻ khi kết hợp cùng lúa mạch thơm ngon.">

        </TextView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/giamsoluong_118"
            android:layout_below="@id/dathang_mieuta_118"
            android:src="@drawable/giamsanpham"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_118"
            android:layout_below="@id/dathang_mieuta_118"
            android:layout_toRightOf="@id/giamsoluong_118"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textSize="26dp"
            android:text="0"></TextView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/tangsoluong_118"
            android:layout_below="@id/dathang_mieuta_118"
            android:layout_toRightOf="@id/number_118"
            android:src="@drawable/ic_baseline_add_circle_outline_24"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"></ImageView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dathang_mieuta_118"
            android:layout_toRightOf="@id/tangsoluong_118"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:background="#FF9501"
            android:text="69.000 đ"
            android:textSize="20dp"
            android:textColor="#fff"></Button>
    </RelativeLayout>

</RelativeLayout>